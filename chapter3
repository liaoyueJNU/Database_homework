3.1:
a.
select title 
from course as c
join department as d
on c.dept_name = d.dept_name 
where c.credits = 3

b.
select name
from student
where ID in
(select s_ID from advisor where i_ID in (select ID from instructor where name = 'Morris'))

c.
select max(salary)
from instructor

d.
select name
from instructor
where salary = (select max(salary) from instructor)

e.
select course_id, count(*)
from takes
where semester = 'fall'
group by course_id

f.
select  count(*)
from takes
where semester = 'fall'
group by course_id
limit 1

g.
