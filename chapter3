3.5
a.
select ID,
   case
      when score < 40 then 'f'
      when score < 60 then 'c'
      when score < 80 then 'b'
      else 'a'
   end
from marks

b.
with grades as
(
    select ID,
      case
         when score < 40 then ’F’
         when score < 60 then ’C’
         when score < 80 then ’B’
         else ’A’
      end as grade
from marks
)
select grade, count(ID)
from grades
group by grade

3.6
select dept_name
from department
where lower(dept_name) like '%sci%'

